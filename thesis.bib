	pages = {430--440},
	file = {Muslimov_Harding_2003_Extended Acceleration in Slot Gaps and Pulsar High-Energy Emission.pdf:/home/alex/Zotero/storage/TJAQUEHB/Muslimov_Harding_2003_Extended Acceleration in Slot Gaps and Pulsar High-Energy Emission.pdf:application/pdf}
